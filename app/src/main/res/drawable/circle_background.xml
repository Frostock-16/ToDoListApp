<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer semi-transparent gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#0CFFFFFF"
                android:endColor="#07FFFFFF"
                android:angle="45"/>
        </shape>
    </item>
    <!-- Inner transparent glass fill -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="#0AFFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#14FFFFFF"/>
        </shape>
    </item>
</layer-list>
